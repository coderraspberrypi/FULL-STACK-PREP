const prompt = require('prompt-sync')({sigint: true});


//user chooses no. elements in array 
number_of_elements = prompt("Enter the no. of elements in your array.");
const numbers=[];

//inputs all the array elements 
for(i=0;i<number_of_elements;i++){
    numbers[i]= prompt("Enter your "+ i +"th array element");
    console.log(numbers[i]);
}


//prints the entered array
console.log(numbers);

//prints the even numbers from the given array
    for(i=0;i<number_of_elements;i++){
        if(numbers[i]%2==0){
            console.log(numbers[i])
